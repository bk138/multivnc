<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:text="@string/new_connection"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dip">

        <TableRow>

            <TextView
                android:gravity="right|center_vertical"
                android:paddingRight="10dip"
                android:text="@string/address_caption"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/textIP"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="text"
                android:singleLine="true" />
        </TableRow>

        <TableRow>

            <TextView
                android:gravity="right|center_vertical"
                android:paddingRight="10dip"
                android:text="@string/port_caption"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/textPORT"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number"
                android:singleLine="true"
                android:text="5900" />
        </TableRow>

        <TableRow>

            <TextView
                android:gravity="right|center_vertical"
                android:paddingRight="10dip"
                android:text="@string/colormode_caption"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Spinner
                android:id="@+id/spinnerColorMode"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:prompt="@string/colormode_caption" />
        </TableRow>

        <TableRow>

            <TextView
                android:gravity="right|center_vertical"
                android:paddingRight="10dip"
                android:text="@string/username_caption"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/textUsername"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/username_hint"
                android:singleLine="true" />
        </TableRow>

        <TableRow>

            <TextView
                android:gravity="right|center_vertical"
                android:paddingRight="10dip"
                android:text="@string/password_caption"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/textPASSWORD"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="textPassword"
                    android:singleLine="true" />

                <CheckBox
                    android:id="@+id/checkboxKeepPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="@string/keep_password_button" />
            </LinearLayout>
        </TableRow>

        <TableRow>

            <TextView
                android:gravity="right|center_vertical"
                android:paddingRight="10dip"
                android:text="@string/repeater_caption"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/textRepeaterId"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/repeater_hint"
                android:singleLine="true" />
        </TableRow>
    </TableLayout>
