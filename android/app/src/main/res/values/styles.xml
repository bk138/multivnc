<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">

        <!-- app branding color for the app bar -->
        <item name="colorPrimary">@color/ui_primary</item>
        <!-- darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/ui_primary_dark</item>
        <!-- theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/ui_primary</item>

        <!-- make all buttons coloured. buttonbar buttons are the ones used in alert dialogs -->
        <item name="android:buttonStyle">@style/App.Button</item>
        <item name="android:buttonBarButtonStyle">@style/App.ButtonBarButton</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="App.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="App.ButtonBarButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/ui_primary</item>
    </style>

</resources>